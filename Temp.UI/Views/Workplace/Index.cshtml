@model IEnumerable<Temp.Application.Workplaces.GetWorkplaces.WorkplacesViewModel>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-8">
    <h1 class="text-center">Workplace search</h1>
    <table class="table table-striped text-center">
        <tr>
            <th>Name</th>
            <th>Options</th>
        </tr>
        @{
            if (Model != null)
            {
                foreach (var workplace in Model)
                {
                    <tr>
                        <td>@workplace.Name</td>
                        <td><a class="btn btn-primary" asp-controller="Workplace" asp-action="Edit" asp-route-id="@workplace.Id"><i class="far fa-edit"></i></a></td>
                    </tr>
                }
            }
        }
    </table>
</div>

