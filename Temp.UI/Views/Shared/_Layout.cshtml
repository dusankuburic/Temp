<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Temp.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

</head>
<body>
    <header>

        @if (Context.User.Identity.IsAuthenticated)
        {
            if(User.IsInRole("Admin"))
            {
                <partial name="nav/NavbarAuthAdmin.cshtml" />
            }

            if(User.IsInRole("User"))
            {
                <partial name="nav/NavbarAuthUser.cshtml" />
            }            
        }
        else
        {
            <partial name="nav/Navbar.cshtml" />
        }


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="ErrorMessage.cshtml" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Temp.UI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
