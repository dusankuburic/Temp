@model Temp.Application.EmploymentStatuses.CreateEmploymentStatus.Request

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-content-wrapper">
    <div class="container-fluid">
        <h1 class="text-center">Create Employment Statuses</h1>
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <form asp-controller="EmploymentStatus" asp-action="Create" method="post" asp-antiforgery="true">
                    <div class="form-group">
                        <h4>Name</h4>
                        <input asp-for="Name" required class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <input type="submit" class="btn btn-success float-right" value="Add" />
                </form>
            </div>
        </div>
    </div>
</div>