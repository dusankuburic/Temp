@model Temp.Application.Auth.Admins.RegisterAdmin.Request

@{
    string message = (string)TempData["message"];

    if (!string.IsNullOrEmpty(message))
    {
        <div class="alert alert-danger" role="alert">
            @message
        </div>
    }

    TempData.Remove("message");
}



<h2>RegisterAdmin page</h2>


<div class="row justify-content-center">
    <div class="col-lg-5">
        <form asp-controller="Auth" asp-action="RegisterAdmin" method="post" asp-antiforgery="true">
            <div class="form-group">
                <p>Username</p>
                <input asp-for="Username" required class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Password</p>
                <input asp-for="Password" required class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <input type="submit" class="btn btn-primary" value="Register" />
        </form>
    </div>
</div>