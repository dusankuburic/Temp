@model Temp.Application.Groups.GetGroup.GroupViewModel 

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div id="page-content-wrapper">
    <div class="container-fluid">
        <h1 class="text-center">Edit Group</h1>
        <div class="row justify-content-center">
            <div class="col-lg-6">
                @{
                    if (Model != null)
                    {

                        var organization = (Temp.Application.Organizations.GetOrganization.OrganizationViewModel)TempData["organization"];
                        var OrganizationId = organization.Id;
                        <div class="alert alert-info text-center" role="alert">
                            <h4>Name:@organization.Name</h4>
                        </div>

                        if (organization != null)
                        {

                            <form asp-controller="Group" asp-action="Edit" method="post" asp-antiforgery="true">
                                <input type="hidden" asp-for="@OrganizationId" />
                                <div class="form-group">
                                    <h4>Name</h4>
                                    <input asp-for="Name" required class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <input type="submit" class="btn btn-success float-right" value="Save" />
                            </form>
                        }
                        else
                        {
                            <div class="alert alert-danger text-center" role="alert">
                                <h4>Can not load organization data</h4>
                            </div>
                        }

                        TempData.Remove("organization");
                    }
                    else
                    {
                        <div class="alert alert-danger text-center" role="alert">
                            <h4>Can not load group</h4>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>