@model Temp.Application.Groups.GetInnerTeams.Response

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-8 pt-4">
    @if (Model != null)
    {
        if (Model.Teams.Count() == 0)
        {
            <div class="alert alert-info text-center" role="alert">
                <h5>There are no teams inside group</h5>
            </div>
        }
        <h1 class="text-center">Teams inside @Model.Name</h1>
        <table class="table table-striped text-center">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th colspan="3">Options</th>
            </tr>

            @foreach (var group in Model.Teams)
            {
                <tr>
                    <td>@group.Id</td>
                    <td>@group.Name</td>
                    <td><a class="btn btn-primary" asp-controller="Group" asp-action="Edit" asp-route-id="@group.Id"><i class="far fa-edit"></i></a></td>
                    <td><a class="btn btn-info" asp-controller="Team" asp-action="Create" asp-route-id="@group.Id"><i class="fas fa-project-diagram"></i></a></td>
                </tr>
            }
        </table>
    }
</div>