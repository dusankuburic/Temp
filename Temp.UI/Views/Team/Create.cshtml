@model Temp.Application.Teams.CreateTeam.Request

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-content-wrapper">
    <div class="container-fluid">
        <h1 class="text-center">Create Team</h1>
        <div class="row justify-content-center">
            <div class="col-lg-6">
                @{

                    var group = (Temp.Application.Groups.GetGroup.GroupViewModel)TempData["group"];
                    var GroupId = group.Id;
                    <div class="alert alert-info text-center" role="alert">
                        <h4>Id:@group.Id Name:@group.Name</h4>
                    </div>

                    if (group != null)
                    {

                        <form asp-controller="Team" asp-action="Create" method="post" asp-antiforgery="true">
                            <input type="hidden" asp-for="@GroupId" />
                            <div class="form-group">
                                <h4>Name</h4>
                                <input asp-for="Name" required class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <input type="submit" class="btn btn-success float-right" value="Add" />
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-danger text-center" role="alert">
                            <h4>Can not load group data</h4>
                        </div>
                    }
                    TempData.Remove("group");
                }
            </div>
        </div>
    </div>
</div>